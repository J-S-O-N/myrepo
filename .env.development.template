# Development Environment Configuration Template
# Copy this file to .env for local development
# These values are examples - update with your actual development values

# Environment
NODE_ENV=development
PORT=3001

# JWT Secret (generate a strong random string)
JWT_SECRET=dev-jwt-secret-change-this-in-production-use-openssl-rand-base64-32

# Database Configuration (Development - SQLite)
DB_DIALECT=sqlite
DB_STORAGE=./server/database.sqlite
# For PostgreSQL in development:
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bankapp_dev
# DB_USER=postgres
# DB_PASSWORD=your_dev_password

# AWS Configuration (for local AWS SDK usage)
AWS_REGION=us-east-1
AWS_PROFILE=default

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# External APIs (optional - use fallback data if not set)
YAHOO_FINANCE_API_KEY=
COINGECKO_API_KEY=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GOALS=true
ENABLE_CRYPTO=true
ENABLE_STOCKS=true

# Session Configuration
SESSION_SECRET=dev-session-secret-change-this
SESSION_TIMEOUT=86400000

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
