# Staging Environment Configuration Template
# These values should be stored in AWS Secrets Manager or GitHub Secrets
# DO NOT commit actual values to Git

# Environment
NODE_ENV=staging
PORT=3001

# JWT Secret (retrieve from AWS Secrets Manager)
JWT_SECRET={{resolve:secretsmanager:bankapp/staging/jwt-secret}}

# Database Configuration (Staging - RDS PostgreSQL)
DB_DIALECT=postgres
DB_HOST={{resolve:secretsmanager:bankapp/staging/db-host}}
DB_PORT=5432
DB_NAME=bankapp_staging
DB_USER={{resolve:secretsmanager:bankapp/staging/db-user}}
DB_PASSWORD={{resolve:secretsmanager:bankapp/staging/db-password}}
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# AWS Configuration
AWS_REGION=us-east-1

# Frontend URL (for CORS)
FRONTEND_URL=https://staging.bankapp.example.com

# API Configuration
API_RATE_LIMIT=200
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# External APIs
YAHOO_FINANCE_API_KEY={{resolve:secretsmanager:bankapp/staging/yahoo-api-key}}
COINGECKO_API_KEY={{resolve:secretsmanager:bankapp/staging/coingecko-api-key}}

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GOALS=true
ENABLE_CRYPTO=true
ENABLE_STOCKS=true

# Session Configuration
SESSION_SECRET={{resolve:secretsmanager:bankapp/staging/session-secret}}
SESSION_TIMEOUT=3600000

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Monitoring
ENABLE_XRAY=true
ENABLE_CLOUDWATCH_METRICS=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=false
